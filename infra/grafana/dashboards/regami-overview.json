{
  "dashboard": {
    "title": "Regami - Overview",
    "uid": "regami-overview",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"api\"}[5m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "req/sec", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 2,
        "title": "API Response Time (P50, P95, P99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{service=\"api\"}[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"api\"}[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{service=\"api\"}[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"label": "seconds", "show": true, "format": "s"},
          {"show": false}
        ]
      },
      {
        "id": 3,
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"api\",status=~\"2..\"}[5m])",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{service=\"api\",status=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Error",
            "refId": "B"
          },
          {
            "expr": "rate(http_requests_total{service=\"api\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Error",
            "refId": "C"
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"api\",status=~\"5..\"}[5m]) / rate(http_requests_total{service=\"api\"}[5m]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Active Users (Last 5min)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "count(count by (user_id) (rate(http_requests_total{service=\"api\"}[5m])))",
            "refId": "A"
          }
        ],
        "options": {
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "db_pool_connections{state=\"used\"}",
            "legendFormat": "Used",
            "refId": "A"
          },
          {
            "expr": "db_pool_connections{state=\"idle\"}",
            "legendFormat": "Idle",
            "refId": "B"
          },
          {
            "expr": "db_pool_max_size",
            "legendFormat": "Max Size",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"label": "connections", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 7,
        "title": "Database Query Duration (P95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(regami_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "seconds", "show": true, "format": "s"},
          {"show": false}
        ]
      }
    ]
  }
}
