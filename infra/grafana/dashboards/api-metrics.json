{
  "dashboard": {
    "title": "Regami API Metrics",
    "tags": ["regami", "api", "backend"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"regami-api\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
      },
      {
        "id": 2,
        "title": "Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"regami-api\"}[5m]))",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"regami-api\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors"
          },
          {
            "expr": "rate(http_requests_total{job=\"regami-api\",status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors"
          }
        ],
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
      },
      {
        "id": 4,
        "title": "Active WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "websocket_connections_active{job=\"regami-api\"}"
          }
        ],
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4}
      },
      {
        "id": 5,
        "title": "Database Connection Pool",
        "type": "stat",
        "targets": [
          {
            "expr": "db_pool_connections_active{job=\"regami-api\"}"
          }
        ],
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4}
      },
      {
        "id": 6,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(redis_cache_hits{job=\"regami-api\"}[5m]) / rate(redis_cache_requests{job=\"regami-api\"}[5m])"
          }
        ],
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 4}
      },
      {
        "id": 7,
        "title": "Top Endpoints by Request Count",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (rate(http_requests_total{job=\"regami-api\"}[5m])))"
          }
        ],
        "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8}
      }
    ],
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1
  }
}
