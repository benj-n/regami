# Regami Production Environment Variables
# Copy to .env and fill in actual values
#
# For use on VM1-PROD and VM2-PROD

# VM Identity
HOSTNAME=vm1-prod
HOST_IP=10.0.0.1

# Docker image tag
IMAGE_TAG=latest

# Application
SECRET_KEY=your-super-secret-key-at-least-32-chars
CORS_ORIGINS=https://regami.com,https://www.regami.com

# PostgreSQL
POSTGRES_USER=regami
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=regami
REPLICATION_PASSWORD=your-replication-password

# MinIO
MINIO_ROOT_USER=regami
MINIO_ROOT_PASSWORD=your-minio-password
S3_PUBLIC_BASE_URL=https://storage.regami.com

# Sentry (optional)
SENTRY_DSN=

# etcd cluster
# For VM1: ETCD_INITIAL_CLUSTER=vm1-prod=http://10.0.0.1:2380,vm2-prod=http://10.0.0.2:2380
# For VM2: Same value
ETCD_INITIAL_CLUSTER=vm1-prod=http://10.0.0.1:2380,vm2-prod=http://10.0.0.2:2380
ETCD_CLUSTER_STATE=new
